<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="ToDo" Height="750" Width="1000" FontFamily="Pericles" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="45" Background="Gray">
            <TextBlock Text="ToDo: Manage your tasks" MinWidth="350" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Margin="100,0,0,0"/>
            <Button Content="Zadania" MinWidth="100" Margin="10,5,0,5" Click="ButtonTasks_Click"/>
            <Button Content="Dodaj" MinWidth="100" Margin="10,5,0,5" Click="ButtonAdd_Click"/>
            <Button Content="Edytuj" MinWidth="100" Margin="10,5,0,5"/>
            <Button Content="Wykonane" MinWidth="100" Margin="10,5,0,5"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,45,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
